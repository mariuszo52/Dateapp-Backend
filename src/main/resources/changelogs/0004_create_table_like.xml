<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="0004" author="Mariusz">
        <createTable tableName="likes">
            <column type="BIGINT" name="id" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="time" type="DateTime">
                <constraints nullable="false"/>
            </column>
            <column name="sending_user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_sending_user"
                             referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="receiving_user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_receiving_user"
                             referencedTableName="users" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
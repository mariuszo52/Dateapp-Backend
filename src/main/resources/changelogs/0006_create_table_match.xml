<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="0006" author="Mariusz">
        <createTable tableName="match">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="is_matched" type="BOOLEAN" defaultOnNull="true">
                <constraints nullable="true"/>
            </column>
            <column name="match_date" type="DATE"/>
            <column name="user_id" type="BIGINT">
                <constraints foreignKeyName="fk_user3" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="matched_user_id" type="BIGINT">
                <constraints foreignKeyName="fk_user4" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="chat_id" type="BIGINT">
                <constraints nullable="true" referencedTableName="chat" referencedColumnNames="id" foreignKeyName="fk_chat3"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>